<Window x:Class="svtnk_exchangeRates.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:svtnk_exchangeRates"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="250" Width="266.5">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="Input rates list" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="125" Grid.ColumnSpan="2"/>
        <ListBox x:Name="SetRatesLB" Margin="10,41,10,66" Grid.ColumnSpan="2"/>
        <Button x:Name="SaveCurListBtn" Content="Save" Margin="10,0,10,10" Height="22" VerticalAlignment="Bottom" Click="SaveCurListBtn_Click" Grid.ColumnSpan="2"/>
        <Button x:Name="AddLineBtn" Content="+" Margin="10,0,4,39" Height="22" VerticalAlignment="Bottom" Click="AddLineBtn_Click"/>
        <Button x:Name="DeleteLineBtn" Content="-" Margin="4,0,10,39" Height="22" VerticalAlignment="Bottom" Grid.Column="1" Click="DeleteLineBtn_Click"/>

    </Grid>
</Window>
